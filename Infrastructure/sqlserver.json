{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "SQLSERVERNAME": {
            "type": "string"
        },
        "sqladminLogin": {
            "type": "string"
        },
        "sqladminpass": {
            "type": "string"
        },
        "Storageaccount": {
            "type": "object"
        },
        "workspaceId": {
            "type": "object"
        },
        "rgEnvironmentTag": {
            "type": "string"
        }
    },
    "variables": {
        "databases": [
            "timeoffdb"
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2015-05-01-preview",
            "name": "[parameters('SQLSERVERNAME')]",
            "location": "[resourcegroup().location]",
            "tags": {
                "environment": "[parameters('rgEnvironmentTag')]"
            },
            "properties": {
                "administratorLogin": "[parameters('sqladminLogin')]",
                "administratorLoginPassword": "[parameters('sqladminpass')]",
                "version": "12.0"
            }
        },
        {
            "type": "Microsoft.Sql/servers/firewallRules",
            "apiVersion": "2015-05-01-preview",
            "name": "[concat(parameters('sqlservername'), '/AllowAllWindowsAzureIps')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlservername'))]"
            ],
            "properties": {
                "startIpAddress": "0.0.0.0",
                "endIpAddress": "0.0.0.0"
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2017-03-01-preview",
            "name": "[concat(parameters('SQLSERVERNAME'),'/',variables('databases')[copyIndex()])]",
            "location": "[resourcegroup().location]",
            "copy": {
                "name": "databasesloop",
                "count": "[length(variables('databases'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('SQLSERVERNAME'))]"
            ],
            "tags": {
                "environment": "[parameters('rgEnvironmentTag')]"
            },
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": 34359738368,
                "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
                "zoneRedundant": false
            },
            "resources": [
                {
                    "name": "default",
                    "type": "backupLongTermRetentionPolicies",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/databases',parameters('sqlservername'),variables('databases')[copyIndex()])]"
                    ],
                    "apiVersion": "2017-03-01-preview",
                    "properties": {
                        "weeklyRetention": "P18W",
                        "monthlyRetention": "P54W",
                        "yearlyRetention": "P520W",
                        "weekOfYear": 1
                    }
                },
                {
                    "type": "providers/diagnosticSettings",
                    "name": "[concat('Microsoft.Insights/', parameters('sqlservername'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/databases',parameters('sqlservername'),variables('databases')[copyIndex()])]"
                    ],
                    "apiVersion": "2017-05-01-preview",
                    "properties": {
                        "name": "SqlServer",
                        "storageAccountId": "[parameters('Storageaccount').storageAccountid.value]",
                        "workspaceId": "[parameters('workspaceId').omsidref.value]",
                        "logs": [
                            {
                                "category": "SQLSecurityAuditEvents",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "SQLInsights",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "AutomaticTuning",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "QueryStoreRuntimeStatistics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "QueryStoreWaitStatistics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "Errors",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "DatabaseWaitStatistics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "Timeouts",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "Blocks",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "Deadlocks",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 120,
                                    "enabled": true
                                }
                            }
                        ],
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "enabled": true,
                                    "days": 120
                                }
                            }
                        ]
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Sql/servers/auditingSettings",
            "apiVersion": "2017-03-01-preview",
            "name": "[concat(parameters('SQLSERVERNAME'), '/Default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('SQLSERVERNAME'))]"
            ],
            "properties": {
                "state": "Enabled",
                "storageEndpoint": "[concat('https://', parameters('Storageaccount').storageAccountName.value, '.blob.core.windows.net/')]",
                "retentionDays": 90,
                "storageAccountAccessKey": "[parameters('storageAccount').storagekey.value]",
                "auditActionsAndGroups": [
                    "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
                    "FAILED_DATABASE_AUTHENTICATION_GROUP",
                    "BATCH_COMPLETED_GROUP"
                ],
                "storageAccountSubscriptionId": "[subscription().subscriptionId]",
                "isStorageSecondaryKeyInUse": false,
                "isAzureMonitorTargetEnabled": true
            }
        },

        {
            "type": "Microsoft.Sql/servers/databases/auditingSettings",
            "apiVersion": "2017-03-01-preview",
            "name": "[concat(parameters('SQLSERVERNAME'), '/Create_JackRabbit/Default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers/databases', parameters('SQLSERVERNAME'), 'Create_JackRabbit')]",
                "[resourceId('Microsoft.Sql/servers', parameters('SQLSERVERNAME'))]"
            ],
            "properties": {
                "state": "Enabled",
                "storageEndpoint": "[concat('https://', parameters('Storageaccount').storageAccountName.value, '.blob.core.windows.net/')]",
                "retentionDays": 90,
                "storageAccountAccessKey": "[parameters('storageAccount').storagekey.value]",
                "auditActionsAndGroups": [
                    "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
                    "FAILED_DATABASE_AUTHENTICATION_GROUP",
                    "BATCH_COMPLETED_GROUP"
                ],
                "storageAccountSubscriptionId": "[subscription().subscriptionId]",
                "isStorageSecondaryKeyInUse": false,
                "isAzureMonitorTargetEnabled": true
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases/auditingSettings",
            "apiVersion": "2017-03-01-preview",
            "name": "[concat(parameters('SQLSERVERNAME'), '/Create_Exari/Default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers/databases', parameters('SQLSERVERNAME'), 'Create_Exari')]",
                "[resourceId('Microsoft.Sql/servers', parameters('SQLSERVERNAME'))]"
            ],
            "properties": {
                "state": "Enabled",
                "storageEndpoint": "[concat('https://', parameters('Storageaccount').storageAccountName.value, '.blob.core.windows.net/')]",
                "retentionDays": 90,
                "storageAccountAccessKey": "[parameters('storageAccount').storagekey.value]",
                "auditActionsAndGroups": [
                    "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
                    "FAILED_DATABASE_AUTHENTICATION_GROUP",
                    "BATCH_COMPLETED_GROUP"
                ],
                "storageAccountSubscriptionId": "[subscription().subscriptionId]",
                "isStorageSecondaryKeyInUse": false,
                "isAzureMonitorTargetEnabled": true
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases/auditingSettings",
            "apiVersion": "2017-03-01-preview",
            "name": "[concat(parameters('SQLSERVERNAME'), '/Create/Default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers/databases', parameters('SQLSERVERNAME'), 'Create')]",
                "[resourceId('Microsoft.Sql/servers', parameters('SQLSERVERNAME'))]"
            ],
            "properties": {
                "state": "Enabled",
                "storageEndpoint": "[concat('https://', parameters('Storageaccount').storageAccountName.value, '.blob.core.windows.net/')]",
                "retentionDays": 90,
                "storageAccountAccessKey": "[parameters('storageAccount').storagekey.value]",
                "auditActionsAndGroups": [
                    "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
                    "FAILED_DATABASE_AUTHENTICATION_GROUP",
                    "BATCH_COMPLETED_GROUP"
                ],
                "storageAccountSubscriptionId": "[subscription().subscriptionId]",
                "isStorageSecondaryKeyInUse": false,
                "isAzureMonitorTargetEnabled": true
            }
        }

    ],
    "outputs": {
        "sqlservername": {
            "type": "string",
            "value": "[parameters('SQLSERVERNAME')]"
        },
        "sqlserverid": {
            "type": "string",
            "value": "[resourceId('Microsoft.Sql/servers',parameters('SQLSERVERNAME'))]"
        }
    }
}